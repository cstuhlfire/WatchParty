<div id="my-container-id" class="my-feature-container">
    <div class="work-feature-block row my-feature">
      <h3>My Watch List</h3>
    </div>

  <div class="work-feature-block row my-feature">
    <div class="columns medium-12">
      <h4></h4>
      <table class="">
        <thead class="my-table-header">
          <tr>
            <th width="100">Date</th>
            <th width="100">Time</th>
            <th width="265">Party Name</th>
            <th width="265">Show Name</th>          
            <th width="175">Host</th>
            <th width="150">Leave Party</th>
            <th width="150">Who's Going</th>
          </tr>
        </thead>

        <tbody>
          {{#each watchlists as |watchlist| }}
          <tr>
            <td>{{format_date watchlist.party_time}}</td>
            <td>{{format_time watchlist.party_time}}</td>
            <td>{{watchlist.party_name}}</td>
            <td>{{watchlist.show_name}}</td>
            <td>{{watchlist.user.name}}</td>
            <td><input id="my-del" class="btn-join-party" type="button" value="Delete" data-id="{{watchlist.id}}" onclick=""></td>
            <td><input class="btn-join-party" type="button" value="Guest List" data-id="{{watchlist.id}}" onclick=""></td>
          </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>

<script src="/js/watchlist.js"></script>

