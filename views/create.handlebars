
<div id="my-container-id" class="my-feature-container">
        <div class="work-feature-block row my-feature">
          <h3>Create Watch Party</h3>
        </div>
      <div class="work-feature-block row my-feature">

        <div class="columns medium-6 my-create-divider">
          <h4 class="my-text-color">Enter Party Details</h4>
          
          
          <form>
            <div class="grid-container">
              <div class="grid-x grid-padding-x">
                <div class="medium-10 cell">

                  <label>Party Name
                    <input id="party-name" type="text" placeholder="Enter your party name">
                  </label>
                  <label>Show Name
                    <input id="party-show" type="text" placeholder="Enter the name of the show you will stream">
                  </label>


                    <div class="medium-5 cell my-form-input">
                      <label>Show Type
                        <select id="show-type">
                          <option value="tv" selected="selected">TV</option>
                          <option value="movie">Movie</option>
                          <option value="videogame">Video Game</option>
                          <option value="stream">Stream</option>
                        </select>
                      </label>
                    </div>

                    <div class="medium-5 cell my-form-input">
                      <label>Genre
                        <select id="show-genre">
                          <option value="comedy" selected="selected">Comedy</option>
                          <option value="action">Action</option>
                          <option value="thriller">Thriller</option>
                          <option value="horror">Horror</option>
                          <option value="drama">Drama</option>
                          <option value="romance">Romance</option>
                          <option value="historical">Historical</option>
                          <option value="documentary">Documentary</option>
                        </select>
                      </label>
                    </div>

                  <label>Stream Link
                    <input type="text" placeholder="Enter the link to the streaming service">
                  </label>


                </div>
              </div>
            </div>
          </form>

          {{!-- <a href="#" target="_blank"><img class="work-feature-block-image my-feature-img" src=""/></a> --}}
        </div>

        
        <div class="columns medium-6">
          <h4 class="work-feature-block-header">Schedule Party</h4>


        <form>
          <div class="grid-container">
            <div class="grid-x grid-padding-x">

              <div class="medium-6 cell">
                <label>Date and Time
                  <input type="datetime-local" placeholder="date" value="">
                </label>
              </div>
                

            </div>
          </div>
        </form>

        {{!-- <a id="btn-create-party" class="button secondary" href="#">Create Party</a> --}}
        <input class="btn-create-party" type="button" value="Create Party" onclick="">

        </div>
    </div>
</div>
 
